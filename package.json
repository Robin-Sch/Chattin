{
  "name": "chattin",
  "version": "0.0.1",
  "description": "Chattin is an application to talk with other people",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win",
    "ship": "electron-builder --win --linux deb -p always",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac dmg",
    "build-linux": "electron-builder --linux appimage"
  },
  "build": {
    "appId": "com.electron.chattin",
    "productName": "Chattin",
    "copyright": "Copyright Â© 2021 ${author}",
    "publish": [
      {
        "provider": "github",
        "owner": "RobinSchapendonk",
        "repo": "Chattin"
      }
    ],
    "mac": {
      "icon": "./build/icon.icns"
    },
    "win": {
      "icon": "./build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "author": {
    "name": "Robin Schapendonk",
    "email": "ytrobinsch2@gmail.com"
  },
  "homepage": "https://robinsch.wtf/chattin",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^3.0.8",
    "electron-updater": "^4.1.2",
    "express": "^4.17.1",
    "path": "^0.12.7",
    "socket.io": "^2.3.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.0.6"
  }
}
